{
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true,
      "major": {
        "dependencyDashboardApproval": true
      }
    },
    {
      "matchPackagePatterns": [
        "*"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "major": {
        "dependencyDashboardApproval": true
      },
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch",
      "labels": [
        "dependencies"
      ]
    }
  ]
}